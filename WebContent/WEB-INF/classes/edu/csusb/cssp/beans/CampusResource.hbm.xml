<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
 "-//Hibernate/Hibernate Mapping DTD//EN"
 "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd"> 

<hibernate-mapping>
   <class name="edu..cssp.beans.CampusResource" table="campus_resource">
      <meta attribute="class-description">
         This class contains the campus resource definitions of the system. 
      </meta>
      <id name="id">
         <generator class="sequence"/>
      </id>
      <property name="name" column="name" type="string"/>
      <property name="dimension_id" column="dimension_id" type="integer"/>
      <property name="phone" column="phone" type="string"/>
      <property name="web" column="web" type="string"/>
      <property name="email" column="email" type="string"/>
      <property name="contacts" column="contacts" type="string"/>
      <property name="others" column="others" type="string"/>
   </class>
</hibernate-mapping>